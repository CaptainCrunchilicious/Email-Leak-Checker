{
    "manifest_version": 3,
    "name": "Email Leak Checker",
    "version": "1.0",
    "description": "Check if your email has been leaked in a data breach.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://haveibeenpwned.com/api/v3/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}